<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/workout_card_background"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/textViewExerciseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="10 pull ups"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/progressImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/camera_icon"
            android:background="@drawable/textfield"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textViewExerciseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D3D3D3"
            android:text="An exercise of 10 pulls from a solid bar going fully down and fully up"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogTime"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/button"
        android:text="Log Exercise Time"
        android:textAllCaps="false"
        android:layout_marginHorizontal="40dp"/>

</LinearLayout>
